@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Browse Books";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var isLoggedIn = Context.Session.GetString("LoginId") != null;
    var selectedDepartment = Context.Request.Query["department"].ToString();
    var searchQuery = Context.Request.Query["search"].ToString();
}

<div class="bg-blur"></div>
<div class="bg-overlay"></div>

<div class="container py-4 position-relative" style="z-index:2;">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
        <div>
            <h2 class="fw-bold text-white"><i class="bi bi-book"></i> Browse Books</h2>
            <p class="text-light opacity-75 small">Search, filter and explore books of all departments</p>
        </div>

        <!-- SEARCH -->
        <form asp-action="BrowseBooks" method="get" class="d-flex mt-2 mt-md-0">
            <input type="text" name="search" placeholder="Search by title or author..."
                   value="@searchQuery"
                   class="form-control search-input me-2" />

            <input type="hidden" name="department" value="@selectedDepartment" />
            <button class="btn btn-primary"><i class="bi bi-search"></i></button>
        </form>
    </div>

    <!-- DEPARTMENT FILTERS -->
    <div class="d-flex gap-2 flex-wrap mb-4">
        @foreach (var dept in new[] { "All", "CSE", "IT", "Mechanical", "Civil", "Chemical" })
        {
            <a href="?department=@dept&search=@searchQuery"
               class="dept-pill @(selectedDepartment == dept ? "active-pill" : "")">
                @dept
            </a>
        }
    </div>

    <!-- BOOK GRID -->
    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No books found for this filter.</div>
            </div>
        }
        else
        {
            foreach (var book in Model)
            {
                var imagePath = book.ImageList?.FirstOrDefault() ?? "/images/books/default-book.png";

                <div class="col-lg-4 col-md-6">
                    <div class="book-card shadow-lg">

                        <div class="book-img-wrapper">
                            <img src="@imagePath" alt="@book.Title"
                                 onerror="this.src='/images/books/default-book.png';"
                                 class="book-img" />
                            <div class="img-gradient"></div>
                        </div>

                        <div class="book-info">
                            <h5 class="book-title">@book.Title</h5>
                            <p class="book-author"><i class="bi bi-person"></i> @book.Author</p>

                            <span class="badge @(book.IsAvailable ? "bg-success" : "bg-danger")">
                                @(book.IsAvailable ? "Available" : "Issued")
                            </span>

                            <div class="mt-3 d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@book.Id"
                                   class="btn btn-outline-info btn-sm w-100">
                                    <i class="bi bi-eye"></i> Details
                                </a>

                                @if (isLoggedIn)
                                {
                                    if (book.IsAvailable)
                                    {
                                        <form asp-action="RequestIssue" method="post" class="w-100">
                                            <input type="hidden" name="id" value="@book.Id" />
                                            <button class="btn btn-success btn-sm w-100">
                                                <i class="bi bi-plus-circle"></i> Add
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            Not Available
                                        </button>
                                    }
                                }
                                else
                                {
                                    <a href="/Account/Login"
                                       class="btn btn-outline-light btn-sm w-100">
                                        Login to add
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- STYLES -->
<style>

    /* Background Image */
    .bg-blur {
        position: fixed;
        inset: 0;
        background: url('/images/library-bg.jpg') center/cover no-repeat;
        filter: blur(8px) brightness(65%);
        z-index: 0;
    }

    .bg-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        z-index: 1;
    }

    /* Search Input */
    .search-input {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.25);
        color: #fff;
        border-radius: 8px;
    }

    .search-input::placeholder { color: #eee; }

    /* Department Pills */
    .dept-pill {
        padding: 7px 16px;
        border-radius: 30px;
        background: rgba(255,255,255,0.12);
        border: 1px solid rgba(255,255,255,0.2);
        color: white;
        text-decoration: none;
        transition: 0.2s;
        font-size: 0.9rem;
    }

    .dept-pill:hover {
        background: rgba(255,255,255,0.25);
    }

    .active-pill {
        background: #00c3ff;
        color: black !important;
        font-weight: bold;
        border-color: #00c3ff;
    }

    /* Book Card */
    .book-card {
        background: rgba(255,255,255,0.07);
        border-radius: 14px;
        overflow: hidden;
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.15);
        transition: 0.3s;
    }

    .book-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
    }

    .book-img-wrapper {
        height: 250px;
        position: relative;
        overflow: hidden;
    }

    .book-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: 0.4s;
    }

    .book-card:hover .book-img { transform: scale(1.08); }

    /* Gradient on Image for readability */
    .img-gradient {
        position: absolute;
        bottom: 0;
        height: 55%;
        width: 100%;
        background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    }

    .book-info {
        padding: 15px;
    }

    .book-title {
        color: #fff;
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 3px;
        text-shadow: 0 2px 4px black;
    }

    .book-author {
        color: #ddd;
        font-size: 0.9rem;
        margin-bottom: 8px;
        text-shadow: 0 1px 2px black;
    }

</style>
