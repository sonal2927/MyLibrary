@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- ✅ Card Header -->
        <div class="card-header bg-primary text-white text-center fs-5 fw-bold rounded-top-4">
            <i class="bi bi-book-half"></i> Book Details
        </div>

        <div class="card-body p-4">
            <div class="row">
                <!-- ✅ Book Image -->
                <div class="col-md-4 text-center mb-3">
                    <img src="@(Model.ImageList?.FirstOrDefault() ?? "/images/books/default-book.png")"
                         onerror="this.onerror=null; this.src='/images/books/default-book.png';"
                         class="img-fluid rounded shadow-sm border"
                         alt="@Model.Title"
                         style="max-height: 300px; object-fit: cover;" />
                </div>

                <!-- ✅ Book Information -->
                <div class="col-md-8">
                    <h4 class="fw-bold text-dark mb-3">@Model.Title</h4>
                    <p class="text-muted"><i class="bi bi-person"></i> <strong>Author:</strong> @Model.Author</p>
                    <p class="text-muted"><i class="bi bi-upc-scan"></i> <strong>ISBN:</strong> @Model.ISBN</p>
                    <p class="text-muted"><i class="bi bi-building"></i> <strong>Department:</strong> @Model.Department</p>
                    <p class="text-muted"><i class="bi bi-collection"></i> <strong>Available Copies:</strong> @Model.Quantity</p>
                    <p class="text-muted">
                        <i class="bi bi-check-circle"></i> <strong>Status:</strong>
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success px-2 py-1">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger px-2 py-1">Issued</span>
                        }
                    </p>

                    <!-- ✅ Action Buttons -->
                    <div class="mt-4">
                        @if (Model.IsAvailable)
                        {
                            <a href="@Url.Action("IssueBookForm", "Books", new { id = Model.Id })" class="btn btn-success shadow-sm me-2">
                                <i class="bi bi-bookmark-plus"></i> Request this Book
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary shadow-sm me-2" disabled>
                                <i class="bi bi-x-circle"></i> Not Available
                            </button>
                        }

                        <a href="@Url.Action("BrowseBooks", "Books")" class="btn btn-outline-secondary shadow-sm">
                            <i class="bi bi-arrow-left"></i> Back to Browse
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
