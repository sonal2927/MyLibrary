@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Browse Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isLoggedIn = Context.Session.GetString("LoginId") != null;
}

<div class="page-bg"></div>

<div class="container my-5 position-relative" style="z-index:2;">

    <!-- üåü Page Title -->
    <h2 class="text-center text-light fw-bold mb-4">
        <i class="bi bi-book-half"></i> Browse Books by Department
    </h2>

    <!-- üîç Search Bar -->
    <form asp-action="BrowseBooks" method="get" class="row justify-content-center mb-4">
        <div class="col-md-6 d-flex">
            <input type="text" name="search" class="form-control search-box me-2"
                   placeholder="Search by book, author, or keywords..." />
            <button type="submit" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>

    <!-- üè∑ Department Filters -->
    <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
        <a href="?department=All" class="filter-btn">All</a>
        <a href="?department=CSE" class="filter-btn cse">CSE</a>
        <a href="?department=IT" class="filter-btn it">IT</a>
        <a href="?department=Mechanical" class="filter-btn mecha">Mechanical</a>
        <a href="?department=Civil" class="filter-btn civil">Civil</a>
        <a href="?department=Chemical" class="filter-btn chem">Chemical</a>
    </div>

    <!-- üìö Book Cards -->
    <div class="row">
        @foreach (var book in Model)
        {
            var imagePath = book.ImageList.FirstOrDefault() ?? "/images/books/default-book.png";

            <div class="col-md-4 mb-4">
                <div class="book-card shadow-lg">

                    <!-- üìò Image -->
                    <div class="img-holder">
                        <img src="@imagePath"
                             onerror="this.onerror=null; this.src='/images/books/default-book.png';"
                             class="book-img" />
                    </div>

                    <!-- üìë Content -->
                    <div class="p-3">

                        <h5 class="fw-bold book-title">@book.Title</h5>

                        <p class="text-muted small mb-2">
                            <i class="bi bi-person"></i> @book.Author
                        </p>

                        <!-- Status -->
                        <span class="status-badge @(book.IsAvailable ? "available" : "unavailable")">
                            @(book.IsAvailable ? "Available" : "Unavailable")
                        </span>

                        <!-- ‚ÑπÔ∏è Details Button (Round Icon) -->
                        <div class="text-end mt-3">
                            <a asp-action="Details" asp-route-id="@book.Id" class="details-btn">
                                <i class="bi bi-info-circle-fill"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Styles {
<style>

    /* üåå PREMIUM DARK GRADIENT BACKGROUND */
    .page-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: linear-gradient(135deg, #0a0f24 0%, #1b2550 40%, #2c1b47 100%);
        background-size: cover;
        z-index: 1;
        opacity: 0.75;
    }

    /* ----------------------------------------
       SEARCH BOX
    ---------------------------------------- */
    .search-box {
        border-radius: 10px;
        padding: 10px 14px;
        border: 1px solid #d0d0d0;
    }

    /* ----------------------------------------
       FILTER BUTTONS CLEAN LOOK
    ---------------------------------------- */
    .filter-btn {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 14px;
        text-decoration: none !important;
        color: white;
        border: 1px solid rgba(255,255,255,0.4);
        backdrop-filter: blur(8px);
        background: rgba(255,255,255,0.08);
        transition: 0.3s;
    }

    .filter-btn:hover {
        background: #0d6efd;
        color: white;
        border-color: #0d6efd;
        transform: translateY(-2px);
    }

    .cse { border-color: #6ea8fe; }
    .it { border-color: #98e0b5; }
    .mecha { border-color: #ffe58f; }
    .civil { border-color: #8eeaff; }
    .chem { border-color: #ffb3b8; }

    /* ----------------------------------------
       BOOK CARD
    ---------------------------------------- */

    .book-card {
        border-radius: 16px;
        background: rgba(255,255,255,0.12);
        backdrop-filter: blur(12px);
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
        border: 1px solid rgba(255,255,255,0.15);
    }

    .book-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
    }

    /* Image styling */
    .img-holder {
        height: 250px;
        overflow: hidden;
    }

    .book-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: 0.4s ease;
    }

    .book-card:hover .book-img {
        transform: scale(1.07);
    }

    /* Title clean design */
    .book-title {
        color: white;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .text-muted {
        color: #cfcfcf !important;
    }

    /* Status badges */
    .status-badge {
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 13px;
    }
    .available {
        background: #d4f4d7;
        color: #157347;
    }
    .unavailable {
        background: #f8d7da;
        color: #b02a37;
    }

    /* ‚ÑπÔ∏è Details icon button */
    .details-btn {
        background: #0d6efd;
        color: white;
        padding: 8px 12px;
        border-radius: 50%;
        display: inline-block;
        font-size: 18px;
        transition: 0.3s ease;
    }

    .details-btn:hover {
        background: #0b5ed7;
        transform: scale(1.1);
    }

</style>
}
