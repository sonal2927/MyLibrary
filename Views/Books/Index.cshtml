@model IEnumerable<LibraryManagementSystem.Models.Book>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Explore Library Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = Context.Session.GetString("UserRole");
    var selectedCategory = Context.Request.Query["category"].ToString();
    var searchQuery = Context.Request.Query["search"].ToString();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var isLoggedIn = Context.Session.GetString("LoginId") != null;
}

<div class="app-wrapper">

    <div class="container py-4">

        <!-- header -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <div>
                <h2 class="h4 page-heading mb-1">üìö Explore <span class="text-muted">Library Books</span></h2>
                <p class="small text-muted mb-0">Find books by category, author, or title</p>
            </div>

            @if (role == "Librarian")
            {
                <a asp-action="Create" asp-controller="Books" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add New Book
                </a>
            }
        </div>

        <!-- toasts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success rounded-3">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger rounded-3">@TempData["Error"]</div>
        }

        <!-- search & filters (using same controls) -->
        <form asp-action="BrowseBooks" method="get" class="row g-3 mb-4 align-items-end bg-light p-3 rounded-3 shadow-sm">
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Category</label>
                <select class="form-select" name="category">
                    <option value="">All Categories</option>
                    @foreach (var cat in categories)
                    {
                        <option value="@cat" selected="@(cat == selectedCategory)">@cat</option>
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold text-secondary">Search</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" value="@searchQuery" class="form-control" placeholder="Search by Title or Author" />
                </div>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>

        <!-- books grid (same cards) -->
        <div id="booksArea" class="row g-4">
            @if (!Model.Any())
            {
                <div class="col-12"><div class="alert alert-info">No books found.</div></div>
            }
            else
            {
                foreach (var book in Model)
                {
                    var imagePath = book.ImageList?.FirstOrDefault() ?? "/images/books/default-book.png";
                    <div class="col-md-4 book-item">
                        <div class="glass-card card book-card h-100">
                            <div class="card-media">
                                <img src="@imagePath" onerror="this.onerror=null; this.src='/images/books/default-book.png';" class="book-img" alt="@book.Title" />
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="book-title mb-1">@book.Title</h5>
                                <p class="small text-muted mb-1"><i class="bi bi-person"></i> <strong>Author:</strong> @book.Author</p>
                                <p class="small text-muted mb-1"><i class="bi bi-tags"></i> <strong>Category:</strong> @book.Department</p>

                                <p class="mb-2">
                                    <strong>Status:</strong>
                                    @if (book.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Issued</span>
                                    }
                                </p>

                                <div class="mt-auto d-grid gap-2">
                                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@book.Id">üëÅ View Details</a>

                                    @if (role == "Student" || role == "Faculty")
                                    {
                                        if (book.IsAvailable)
                                        {
                                            <form asp-action="IssueBookForm" asp-route-id="@book.Id" method="get">
                                                <button type="submit" class="btn btn-success btn-sm">üìñ Issue Book</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled>‚ùå Not Available</button>
                                        }
                                    }

                                    @if (role == "Librarian")
                                    {
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@book.Id">üóë Delete</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Reuse the same Styles + Scripts used in BrowseBooks -->
@section Styles {
    <style>
        :root{
            --glass-bg: rgba(255,255,255,0.06);
            --glass-border: rgba(255,255,255,0.08);
            --accent: #5eead4;
            --muted: rgba(15,23,42,0.7);
        }

        .app-wrapper{
            min-height:100vh;
            background: linear-gradient(135deg,#07112a 0%, #0b1b3a 40%, #0f1a2f 100%);
            padding-bottom:40px;
        }

        .page-heading .bi { color: #60c5ff; margin-right:6px; font-size:1.25rem; }

        .glass-card {
            background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
            border: 1px solid var(--glass-border);
            border-radius: 14px;
            backdrop-filter: blur(8px) saturate(120%);
            overflow: hidden;
            transition: transform .25s ease, box-shadow .25s ease;
            height:100%;
        }
        .glass-card:hover { transform: translateY(-8px); box-shadow: 0 18px 50px rgba(2,6,23,0.7); }

        .card-media{ height:230px; overflow:hidden; }
        .book-img { width:100%; height:100%; object-fit:cover; transition: transform .45s ease; }
        .glass-card:hover .book-img { transform: scale(1.06); }

        .book-title { color: #eaf6ff; font-size:1.02rem; margin-bottom:0; }

        @@media (max-width:767.98px){
            .card-media{ height:200px; }
        }
    </style>
}

@section Scripts {
    <script>
        (function(){
            // small shared helpers for toggles (same as BrowseBooks)
            const booksArea = document.getElementById('booksArea');
            // no toggles here by default; you can reuse toggles from BrowseBooks if desired
        })();
    </script>
}
