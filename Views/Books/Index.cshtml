@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Browse Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isLoggedIn = Context.Session.GetString("LoginId") != null;
}

<div class="container my-5">

    <!-- üåü Page Title -->
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="bi bi-book-half"></i> Browse Books by Department
    </h2>

    <!-- üîç Search Bar -->
    <form asp-action="BrowseBooks" method="get" class="row justify-content-center mb-4">
        <div class="col-md-6 d-flex">
            <input type="text" name="search" class="form-control search-box me-2"
                   placeholder="Search by book, author, or keywords..." />
            <button type="submit" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>

    <!-- üè∑ Department Filters -->
    <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
        <a href="?department=All" class="filter-btn">All</a>
        <a href="?department=CSE" class="filter-btn cse">CSE</a>
        <a href="?department=IT" class="filter-btn it">IT</a>
        <a href="?department=Mechanical" class="filter-btn mecha">Mechanical</a>
        <a href="?department=Civil" class="filter-btn civil">Civil</a>
        <a href="?department=Chemical" class="filter-btn chem">Chemical</a>
    </div>

    <!-- üìö Book Cards -->
    <div class="row">
        @foreach (var book in Model)
        {
            var imagePath = book.ImageList.FirstOrDefault() ?? "/images/books/default-book.png";

            <div class="col-md-4 mb-4">
                <div class="book-card shadow-sm">

                    <!-- üìò Image -->
                    <div class="img-holder">
                        <img src="@imagePath"
                             onerror="this.onerror=null; this.src='/images/books/default-book.png';"
                             class="book-img" />
                    </div>

                    <!-- üìë Content -->
                    <div class="p-3">

                        <h5 class="fw-bold book-title">@book.Title</h5>

                        <p class="text-muted small mb-2">
                            <i class="bi bi-person"></i> @book.Author
                        </p>

                        <!-- Status -->
                        <span class="status-badge @(book.IsAvailable ? "available" : "unavailable")">
                            @(book.IsAvailable ? "Available" : "Unavailable")
                        </span>

                        <!-- ‚ÑπÔ∏è Details Button (Round Icon) -->
                        <div class="text-end mt-3">
                            <a asp-action="Details" asp-route-id="@book.Id" class="details-btn">
                                <i class="bi bi-info-circle-fill"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Styles {
    <style>

        /* ----------------------------------------
           SEARCH BOX
        ---------------------------------------- */
        .search-box {
            border-radius: 10px;
            padding: 10px 14px;
            border: 1px solid #d0d0d0;
        }

        /* ----------------------------------------
           FILTER BUTTONS CLEAN LOOK
        ---------------------------------------- */
        .filter-btn {
            padding: 5px 14px;
            border-radius: 20px;
            font-size: 14px;
            text-decoration: none !important;
            color: #444;
            border: 1px solid #ccc;
            transition: 0.3s;
        }

        .filter-btn:hover {
            background: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }

        .cse { border-color: #0d6efd; }
        .it { border-color: #198754; }
        .mecha { border-color: #ffc107; }
        .civil { border-color: #0dcaf0; }
        .chem { border-color: #dc3545; }

        /* ----------------------------------------
           BOOK CARD
        ---------------------------------------- */

        .book-card {
            border-radius: 14px;
            background: white;
            transition: all 0.3s ease;
            overflow: hidden;
            height: 100%;
        }

        .book-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }

        /* Image styling */
        .img-holder {
            height: 250px;
            overflow: hidden;
        }

        .book-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: 0.4s ease;
        }

        .book-card:hover .book-img {
            transform: scale(1.07);
        }

        /* Title clean design */
        .book-title {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        /* Status badges */
        .status-badge {
            padding: 4px 10px;
            border-radius: 8px;
            font-size: 13px;
        }
        .available {
            background: #d4f4d7;
            color: #157347;
        }
        .unavailable {
            background: #f8d7da;
            color: #b02a37;
        }

        /* ‚ÑπÔ∏è Details icon button */
        .details-btn {
            background: #0d6efd;
            color: white;
            padding: 8px 12px;
            border-radius: 50%;
            display: inline-block;
            font-size: 18px;
            transition: 0.3s ease;
        }

        .details-btn:hover {
            background: #0b5ed7;
            color: white;
            transform: scale(1.1);
        }

    </style>
}
