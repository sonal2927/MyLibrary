@model IEnumerable<LibraryManagementSystem.Models.Book>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Explore Library Books";
    var role = Context.Session.GetString("UserRole");
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var selectedCategory = Context.Request.Query["category"];
    var searchQuery = Context.Request.Query["search"];
}

<div class="container my-4">

    <!-- Heading + Add Book Button -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                üìö Explore <span class="text-dark">Library Books</span>
            </h2>
            <p class="text-muted mb-0">Search & browse by department, author, and title.</p>
        </div>

        @if (role == "Librarian")
        {
            <a asp-action="Create" class="btn btn-success shadow-sm mt-3 mt-md-0">
                <i class="bi bi-plus-circle"></i> Add Book
            </a>
        }
    </div>

    <!-- Search + Filters -->
    <form asp-action="Index" method="get" class="row g-3 mb-4 bg-light p-3 rounded shadow-sm">

        <div class="col-md-3">
            <label class="form-label fw-bold text-secondary">Department</label>
            <select name="category" class="form-select shadow-sm">
                <option value="">All Departments</option>
                @foreach (var c in categories)
                {
                    <option value="@c" selected="@(selectedCategory == c)">
                        @c
                    </option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold text-secondary">Search</label>
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" name="search" value="@searchQuery"
                       class="form-control"
                       placeholder="Search by title, author, keywords..." />
            </div>
        </div>

        <div class="col-md-3">
            <button class="btn btn-primary w-100 shadow-sm mt-md-4 mt-2">
                <i class="bi bi-search"></i> Search
            </button>
        </div>

    </form>

    <!-- Book Cards -->
    <div class="row">

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info shadow-sm">
                    üì≠ No books found. Try different search or filter.
                </div>
            </div>
        }
        else
        {
            @foreach (var book in Model)
            {
                var imagePath = (book.ImageList != null && book.ImageList.Any())
                    ? book.ImageList.First()
                    : "/images/books/default-book.png";

                <div class="col-md-4 mb-4">

                    <div class="book-card shadow-sm rounded-4 h-100">

                        <!-- Image -->
                        <div class="img-wrap">
                            <img src="@imagePath"
                                 onerror="this.onerror=null; this.src='/images/books/default-book.png';"
                                 class="book-img" />
                        </div>

                        <div class="p-3 d-flex flex-column">

                            <h5 class="fw-bold text-primary book-title">@book.Title</h5>
                            <p class="text-muted mb-1"><i class="bi bi-person"></i> @book.Author</p>
                            <p class="text-muted mb-1"><i class="bi bi-tags"></i> @book.Department</p>

                            <span class="status-badge @(book.IsAvailable ? "available" : "unavailable")">
                                @(book.IsAvailable ? "Available" : "Issued")
                            </span>

                            <div class="mt-auto pt-2 d-flex justify-content-between">

                                <a asp-action="Details" asp-route-id="@book.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    üëÅ View
                                </a>

                                @if (role == "Student" || role == "Faculty")
                                {
                                    @if (book.IsAvailable)
                                    {
                                        <a asp-action="IssueBookForm" asp-route-id="@book.Id"
                                           class="btn btn-success btn-sm">üìñ Issue</a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Not Available</button>
                                    }
                                }

                                @if (role == "Librarian")
                                {
                                    <a asp-action="Delete" asp-route-id="@book.Id"
                                       class="btn btn-outline-danger btn-sm">üóë Delete</a>
                                }
                            </div>

                        </div>
                    </div>

                </div>
            }
        }
    </div>

</div>


<style>
    .book-card {
        overflow: hidden;
        transition: 0.3s;
        border: 1px solid #e8e8e8;
        background: white;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .img-wrap {
        height: 240px;
        overflow: hidden;
        border-radius: 12px 12px 0 0;
    }

    .book-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: 0.4s;
    }

    .book-card:hover .book-img {
        transform: scale(1.07);
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 13px;
        margin-top: 6px;
        display: inline-block;
        width: max-content;
    }

    .available {
        background: #d1f8d1;
        color: #0b7a0b;
    }

    .unavailable {
        background: #ffd3d3;
        color: #a40000;
    }

    .book-title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
