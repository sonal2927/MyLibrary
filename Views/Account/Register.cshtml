@model LibraryManagementSystem.Models.ViewModels.UserRegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-8 col-lg-7 p-5 rounded-4 shadow glass-effect animate__animated animate__fadeIn">

        <!-- Header -->
        <div class="text-center mb-4">
            <i class="fa-solid fa-user-plus fa-2x text-primary"></i>
            <h2 class="fw-bold">User Registration</h2>
            <p class="text-muted">Fill in the details to create your account</p>
        </div>

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }

        @Html.ValidationSummary(true, "", new { @class = "alert alert-warning" })

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="row g-3">

                <!-- Role -->
                <div class="col-md-6">
                    <label asp-for="Role" class="form-label fw-semibold">Role</label>
                    <select asp-for="Role" class="form-select shadow-sm" id="roleDropdown" required>
                        <option value="">-- Select Role --</option>
                        <option>Student</option>
                        <option>Faculty</option>
                        <option>Librarian</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Department -->
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label fw-semibold">Department</label>
                    <select asp-for="Department" class="form-select shadow-sm" id="departmentDropdown" required>
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <!-- Fullname -->
                <div class="col-md-12">
                    <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                    <input asp-for="FullName" class="form-control shadow-sm" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Unified Login Field (Enrollment/FacultyID/LibrarianID) -->
                <div id="identifierField" class="col-md-6" style="display:none;">
                    <label id="identifierLabel" class="form-label fw-semibold"></label>
                    <input asp-for="UserIdentifier" class="form-control shadow-sm" />
                    <span asp-validation-for="UserIdentifier" class="text-danger"></span>
                </div>

                <!-- Year (Student Only) -->
                <div id="yearField" class="col-md-3" style="display:none;">
                    <label asp-for="Year" class="form-label fw-semibold">Year</label>
                    <select asp-for="Year" class="form-select shadow-sm">
                        <option value="">-- Select Year --</option>
                        <option>1st Year</option>
                        <option>2nd Year</option>
                        <option>3rd Year</option>
                        <option>4th Year</option>
                    </select>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <!-- Semester (Student Only) -->
                <div id="semesterField" class="col-md-3" style="display:none;">
                    <label asp-for="Semester" class="form-label fw-semibold">Semester</label>
                    <select asp-for="Semester" class="form-select shadow-sm">
                        <option value="">-- Select Semester --</option>
                        @for (int i = 1; i <= 8; i++)
                        {
                            <option>Semester @i</option>
                        }
                    </select>
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" type="email" class="form-control shadow-sm" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
                    <input asp-for="Phone" class="form-control shadow-sm" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Gender -->
                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label fw-semibold">Gender</label>
                    <select asp-for="Gender" class="form-select shadow-sm" required>
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <!-- DOB -->
                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label fw-semibold">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control shadow-sm" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="col-md-12">
                    <label asp-for="Address" class="form-label fw-semibold">Address</label>
                    <textarea asp-for="Address" class="form-control shadow-sm"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary fw-bold shadow-sm">
                    Submit Registration Request
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const roleDropdown = document.getElementById("roleDropdown");
        const departmentDropdown = document.getElementById("departmentDropdown");

        const studentFacultyDepartments = ["CSE", "IT", "Mechanical", "Civil", "Electrical"];
        const librarianDepartments = ["Senior Librarian", "Assistant", "Librarian"];

        function updateFields() {
            const role = roleDropdown.value;

            const identifierField = document.getElementById("identifierField");
            const identifierLabel = document.getElementById("identifierLabel");
            const yearField = document.getElementById("yearField");
            const semesterField = document.getElementById("semesterField");

            // Hide all
            identifierField.style.display = "none";
            yearField.style.display = "none";
            semesterField.style.display = "none";

            // Show based on role
            if (role === "Student") {
                identifierLabel.innerText = "Enrollment Number";
                identifierField.style.display = "block";
                yearField.style.display = "block";
                semesterField.style.display = "block";
            } else if (role === "Faculty") {
                identifierLabel.innerText = "Faculty ID";
                identifierField.style.display = "block";
            } else if (role === "Librarian") {
                identifierLabel.innerText = "Librarian ID";
                identifierField.style.display = "block";
            }

            // Update department dropdown
            departmentDropdown.innerHTML = '<option value="">-- Select Department --</option>';
            if (role === "Student" || role === "Faculty") {
                studentFacultyDepartments.forEach(d => {
                    const opt = document.createElement("option");
                    opt.value = d;
                    opt.text = d;
                    departmentDropdown.add(opt);
                });
            } else if (role === "Librarian") {
                librarianDepartments.forEach(d => {
                    const opt = document.createElement("option");
                    opt.value = d;
                    opt.text = d;
                    departmentDropdown.add(opt);
                });
            }
        }

       roleDropdown.addEventListener("change", updateFields);

        // Run on page load ONLY if role already selected
        if (roleDropdown.value !== "") {
            updateFields();
        }

    </script>
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f0f4ff, #dcefff);
            font-family: 'Segoe UI', sans-serif;
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.88);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.25);
        }
        textarea.form-control {
            resize: none;
            min-height: 100px;
        }
    </style>
}
