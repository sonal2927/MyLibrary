@model LibraryManagementSystem.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
    var books = ViewBag.Books as List<string>;
    var userRole = ViewBag.UserRole as string ?? "";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="text-primary mb-4">
            <i class="fa-solid fa-user-pen"></i> Edit User - <span class="fw-bold">@Model.FullName</span>
        </h3>

        <!-- ✅ SUCCESS / ERROR -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
        }
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    { <li>@error.ErrorMessage</li> }
                </ul>
            </div>
        }

        <form asp-action="EditUser" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Role" />

            <div class="row g-4">
                <!-- ✅ Left: Personal Info -->
                <div class="col-md-7">
                    <h5 class="text-secondary border-bottom pb-2 mb-3">
                        <i class="bi bi-person-lines-fill"></i> Personal Details
                    </h5>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Library ID</label>
                            <input asp-for="LoginId" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <select asp-for="Department" class="form-select" required>
                                <option value="">-- Select Department --</option>
                                <option>CSE</option>
                                <option>IT</option>
                                <option>Chemical</option>
                                <option>Mechanical</option>
                                <option>Electrical</option>
                                <option>Civil</option>
                                <option>Library</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <!-- ✅ Right: Issued Books -->
                <div class="col-md-5">
                    <h5 class="text-secondary border-bottom pb-2 mb-3">
                        <i class="bi bi-book"></i> Issued Books
                    </h5>
                    <div class="list-group">
                        @if (books != null && books.Any())
                        {
                            foreach (var book in books)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@book</span>
                                    <span class="badge bg-info text-dark">Issued</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item text-muted">No books issued.</div>
                        }
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a href="@Url.Action("UserDetails", "Account", new { id = Model.LoginId })"
                   class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>

        <!-- ✅ Delete User -->
        @if (userRole == "librarian" || userRole == "admin")
        {
            <div class="text-center mt-3">
                <form asp-action="SoftDeleteUser" method="post" asp-route-id="@Model.Id"
                      onsubmit="return confirm('Are you sure you want to remove this user?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Remove User
                    </button>
                </form>
            </div>
        }
    </div>
</div>
