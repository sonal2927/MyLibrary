@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>

    /* üåç FULL PAGE BACKGROUND */
    body {
        background: url('/images/librarybg.jpg') no-repeat center center fixed;
        background-size: cover;

        /* üî• Top-bottom curve */
        border-radius: 25px;
        overflow: hidden;
    }

    /* üåà HERO SECTION ‚Äì GLASS */
    .contact-hero {
        width: 95%;
        max-width: 1400px;
        margin: 30px auto;
        padding: 60px 20px;

        background: rgba(255, 255, 255, 0.20);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);

        border-radius: 20px; 
        border: 1px solid rgba(255, 255, 255, 0.40);
        box-shadow: 0 10px 32px rgba(0, 0, 0, 0.25);

        text-align: center;
    }

    .contact-hero h1 {
        color: white;
        font-weight: 700;
        text-shadow: 0 2px 8px rgba(0,0,0,0.5);
    }

    .contact-hero p {
        color: #f1f1f1;
        font-size: 1.1rem;
    }

    /* üåü REAL GLASS CARD (FIXED) */
    .glass-card {
        background: rgba(255, 255, 255, 0.20);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);

        border-radius: 20px;
        padding: 35px;
        border: 1px solid rgba(255, 255, 255, 0.40);

        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        transition: 0.25s ease-in-out;
    }

    .glass-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 14px 45px rgba(0,0,0,0.35);
    }

    /* üìå Main section spacing */
    .contact-section {
        padding: 70px 10px;
    }

    .contact-icon {
        font-size: 1.4rem;
        color: #c1a7dd;
        margin-right: 10px;
    }

    .map-box {
        height: 300px;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.4);
    }

    .glass-title {
        font-weight: 700;
        color: #000;
    }

    .contact-details p {
        color: black;
        font-weight: 500;
    }
</style>
}

<!-- üåà HERO CARD -->
<div class="contact-hero">
    <h1 class="display-5 fw-bold">üìû Contact the Library</h1>
    <p class="lead">We're here to help! Reach out anytime.</p>
</div>


<!-- üìò MAIN CONTENT -->
<div class="contact-section container">
    <div class="row g-4 align-items-stretch">

        <!-- üì¨ DETAILS CARD -->
        <div class="col-md-6">
            <div class="glass-card h-100 contact-details">
                <h3 class="glass-title mb-4">üì¨ Get in Touch</h3>

                <p>
                    <i class="bi bi-envelope-fill contact-icon"></i>
                    <strong>Email: </strong>
                    <a href="mailto:info@svmit.ac.in" class="text-decoration-none">info@svmit.ac.in</a>
                </p>

                <p>
                    <i class="bi bi-telephone-fill contact-icon"></i>
                    <strong>Phone:</strong> +91-2642-245864
                </p>

                <p>
                    <i class="bi bi-geo-alt-fill contact-icon"></i>
                    <strong>Address:</strong><br>
                    College Campus, College Road,<br>
                    Bharuch - 392001, Gujarat, India
                </p>

                <hr>

                <h5 class="fw-bold">üïí Office Hours</h5>
                <p>Mon ‚Äì Fri: 8:30 AM to 4:00 PM</p>
                <p>Saturday: 8:30 AM to 1:00 PM</p>
            </div>
        </div>

        <!-- üó∫ MAP CARD -->
        <div class="col-md-6">
            <div class="glass-card h-100">
                <h3 class="glass-title mb-4">üìç Find Us</h3>

                <div class="map-box mb-3">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3719.3935039513265!2d72.99999999999999!3d21.712938900000003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be0333cbadf3e33%3A0xf4067b7a5b09e0e3!2sSVMIT%20College!5e0!3m2!1sen!2sin!4v1715151515151"
                        width="100%" height="100%" style="border:0;" allowfullscreen loading="lazy">
                    </iframe>
                </div>

                <p class="text-muted small">*Location map is for reference only.</p>
            </div>
        </div>

    </div>
</div>
