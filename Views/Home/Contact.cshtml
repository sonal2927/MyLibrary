@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .contact-hero {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            padding: 60px 20px;
            text-align: center;
        }

        .contact-section {
            padding: 60px 20px;
        }

        .contact-card {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            transition: 0.3s ease;
        }

        .contact-card:hover {
            transform: translateY(-4px);
        }

        .contact-icon {
            font-size: 1.3rem;
            color: #6a11cb;
            margin-right: 10px;
        }

        .map-box {
            height: 300px;
            border-radius: 10px;
            overflow: hidden;
        }

        .contact-details p {
            font-size: 1.1rem;
        }
    </style>
}

