@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(180deg, #f5f7fa, #e4ebf5);
            color: #222;

            /* 🌟 Rounded full-page effect */
            border-radius: 30px;
            overflow: hidden;
        }


        /* ===============================
        ANNOUNCEMENT BAR
        =============================== */
        .announcement-bar {
            background: #fcebb6;
            border-bottom: 1px solid #e0d2a2;
            box-shadow: 0 3px 8px rgba(0,0,0,.1);
            padding: 12px 0;
            font-weight: 500;
            text-align: center;
        }

        /* ===============================
        STATS BOX
        =============================== */
        .stat-box {
            border-radius: 18px;
            padding: 30px 20px;
            background: #ffffff;
            box-shadow: 0 8px 20px rgba(0,0,0,.1);
            transition: all 0.3s ease;
            margin: 10px;
        }

        .stat-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,.15);
        }

        /* ===============================
        NAV CARDS
        =============================== */
        .nav-card {
            border-radius: 15px;
            background: #ffffff;
            box-shadow: 0 6px 25px rgba(0,0,0,0.08);
            transition: all 0.35s ease;
            margin: 10px 0;
        }

        .nav-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        /* ===============================
        BUTTONS
        =============================== */
        .nav-card .btn {
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .nav-card .btn:hover {
            transform: translateY(-2px);
        }

        /* ===============================
        HERO SECTION
        =============================== */
        .hero {
            background: linear-gradient(
                        rgba(0,0,0,0.3),
                        rgba(0,0,0,0.4)
                    ),
                    url('/images/librarybg.jpg') center/cover no-repeat;
            color: #fff;
            padding: 140px 30px;
            text-align: center;
            border-bottom-left-radius: 25px;
            border-bottom-right-radius: 25px;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .hero p {
            font-size: 1.25rem;
        }


    </style>
}

<!-- 🌙 Dark Mode Toggle -->
<button id="darkModeToggle">
    <i id="themeIcon" class="fa fa-moon"></i>
</button>

<div class="container-fluid px-0">
    <!-- 🟦 HERO -->
    <section class="hero mb-5">
        <div class="container">
            <h1>Welcome to SVMIT College Library 📚</h1>
            <p class="mt-3">Access thousands of books, journals & study materials — anytime, anywhere.</p>
        </div>
    </section>

    <!-- 📢 ANNOUNCEMENT BAR -->
    <section class="announcement-bar text-center">
        <strong>📢 Latest Announcement:</strong> Library will remain closed on <b>10th July</b> for Book Fair.
    </section>

    <!-- 📘 ABOUT SECTION -->
    <section class="container my-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <h3>📖 About the Library</h3>
                <p>Our library provides academic resources to support students & faculty.</p>
            </div>
            <div class="col-md-4">
                <h3>🎓 Who Can Access</h3>
                <p>Students, faculty, and staff can browse, request and issue books.</p>
            </div>
            <div class="col-md-4">
                <h3>✨ Key Features</h3>
                <p>Online book search, issue tracking, smart dashboard & alerts.</p>
            </div>
        </div>
    </section>

    <!-- 📊 STATS -->
    <section class="py-5">
        <div class="container text-center">
            <div class="row g-4">
                <div class="col-md-3"><div class="stat-box"><h2>📚 5,000+</h2><p>Total Books</p></div></div>
                <div class="col-md-3"><div class="stat-box"><h2>👩‍🎓 1,200+</h2><p>Registered Users</p></div></div>
                <div class="col-md-3"><div class="stat-box"><h2>📂 15+</h2><p>Categories</p></div></div>
                <div class="col-md-3"><div class="stat-box"><h2>🕐 9 AM – 5 PM</h2><p>Library Timings</p></div></div>
            </div>
        </div>
    </section>

    <!-- 🧭 NAVIGATION -->
    <section class="container my-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔍 Explore Books</h4>
                        <p>Browse books by department and availability.</p>
                        <a href="@Url.Action("BrowseBooks", "Books")" class="btn btn-primary">View Books</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔐 Login</h4>
                        <p>Login as Student, Faculty, Librarian or Admin.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>📞 Contact Helpdesk</h4>
                        <p>If you need help, reach out to our support team.</p>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-info">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const toggleBtn = document.getElementById('darkModeToggle');
        const icon = document.getElementById('themeIcon');

        function applyDark(enable) {
            document.body.classList.toggle('dark-mode', enable);
            icon.className = enable ? 'fa fa-sun' : 'fa fa-moon';
            localStorage.setItem('darkMode', enable);
        }

        toggleBtn.addEventListener('click', () => {
            const isDark = document.body.classList.contains('dark-mode');
            applyDark(!isDark);
        });

        // Apply saved preference
        applyDark(localStorage.getItem('darkMode') === 'true');
    </script>
}
