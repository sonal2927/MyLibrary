@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>

        /* ============================
           GLOBAL PAGE SMOOTH FADE-IN
        ============================ */
        body {
            opacity: 0;
            transition: opacity .6s ease-in-out;
        }

        body.loaded {
            opacity: 1;
        }

        /* ============================
           HERO SECTION (with BG Image)
        ============================ */
        .hero {
            background: linear-gradient(
                       to right,
                       rgba(0, 0, 0, .55),
                       rgba(0, 0, 0, .6)
                     ),
                     url('/images/library-hero.jpg') center/cover no-repeat;
            color: white;
            padding: 140px 20px;
            text-align: center;
            background-attachment: fixed;
        }

        .hero h1 {
            font-weight: 800;
            font-size: 3.4rem;
            animation: fadeDown .9s ease-out;
        }

        .hero p {
            font-size: 1.25rem;
            opacity: .92;
            animation: fadeUp 1s ease-out;
        }

        @@keyframes fadeDown {
            from { opacity: 0; transform: translateY(-30px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        @@keyframes fadeUp {
            from { opacity: 0; transform: translateY(30px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        /* ============================
           ANNOUNCEMENT BAR
        ============================ */
        .announcement-bar {
            background: #ffe082;
            color: #3b2f00;
            font-size: 1.05rem;
            font-weight: 600;
            padding: 12px;
            box-shadow: 0 2px 6px rgba(0,0,0,.18);
            animation: fadeIn 1s ease-in;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to   { opacity: 1; }
        }

        /* ============================
           STAT BOX (Glass Effect)
        ============================ */
        .stat-box {
            border-radius: 18px;
            padding: 35px 20px;
            backdrop-filter: blur(10px);
            background: rgba(255,255,255,0.55);
            transition: .3s ease;
            box-shadow: 0 4px 14px rgba(0,0,0,0.18);
        }

        .stat-box:hover {
            transform: translateY(-6px);
            background: rgba(255,255,255,0.75);
            box-shadow: 0 8px 25px rgba(0,0,0,0.22);
        }

        /* ============================
           NAVIGATION CARDS
        ============================ */
        .nav-card {
            border-radius: 14px;
            transition: transform .35s ease, box-shadow .35s ease;
        }

        .nav-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 18px 40px rgba(0,0,0,.22);
        }

        /* ============================
           DARK MODE FIXED BUTTON
        ============================ */
        #darkModeToggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
        }
    </style>
}

<!-- 🌙 Dark Mode Toggle -->
<button id="darkModeToggle" class="btn btn-sm btn-outline-light bg-dark shadow">
    <i id="themeIcon" class="fa fa-moon"></i>
</button>


<div class="container-fluid px-0">

    <!-- 🟦 HERO -->
    <section class="hero mb-5">
        <div class="container">
            <h1>Welcome to SVMIT College Library 📚</h1>
            <p class="mt-3">
                Access thousands of books, journals & study materials — anytime, anywhere.
            </p>
        </div>
    </section>

    <!-- 📢 ANNOUNCEMENT BAR (Static Design-Only) -->
    <section class="announcement-bar text-center">
        <strong>📢 Latest Announcement:</strong>
        Library will remain closed on <b>10th July</b> for Book Fair.
    </section>

    <!-- 📘 ABOUT SECTION -->
    <section class="container my-5">
        <div class="row text-center g-4">

            <div class="col-md-4">
                <h3>📖 About the Library</h3>
                <p>Our library provides academic resources to support students & faculty.</p>
            </div>

            <div class="col-md-4">
                <h3>🎓 Who Can Access</h3>
                <p>Students, faculty, and staff can browse, request and issue books.</p>
            </div>

            <div class="col-md-4">
                <h3>✨ Key Features</h3>
                <p>Online book search, issue tracking, smart dashboard & alerts.</p>
            </div>

        </div>
    </section>

    <!-- 📊 STATS -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <div class="row g-4">

                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>📚 5,000+</h2>
                        <p>Total Books</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>👩‍🎓 1,200+</h2>
                        <p>Registered Users</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>📂 15+</h2>
                        <p>Categories</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>🕐 9 AM – 5 PM</h2>
                        <p>Library Timings</p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- 🧭 NAVIGATION -->
    <section class="container my-5">
        <div class="row text-center g-4">

            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔍 Explore Books</h4>
                        <p>Browse books by department and availability.</p>
                        <a href="@Url.Action("Index", "Books")" class="btn btn-primary">View Books</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔐 Login</h4>
                        <p>Login as Student, Faculty, Librarian or Admin.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>📞 Contact Helpdesk</h4>
                        <p>If you need help, reach out to our support team.</p>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-info">Contact Us</a>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>


@section Scripts {

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Apply Saved Dark Mode
        const toggleBtn = document.getElementById('darkModeToggle');
        const icon = document.getElementById('themeIcon');

        function applyDark(enable) {
            document.body.classList.toggle('dark-mode', enable);
            icon.className = enable ? 'fa fa-sun' : 'fa fa-moon';
            localStorage.setItem('darkMode', enable);
        }

        toggleBtn.addEventListener('click', () => {
            const isDark = document.body.classList.contains('dark-mode');
            applyDark(!isDark);
        });

        applyDark(localStorage.getItem('darkMode') === 'true');

        // Page fade effect
        document.addEventListener("DOMContentLoaded", () => {
            document.body.classList.add("loaded");
        });
    </script>
}
