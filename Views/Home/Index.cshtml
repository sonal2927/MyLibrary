@model Announcement
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />

    <style>

        /* PAGE FADE IN */
        body {
            opacity: 0;
            transition: opacity .5s ease-in;
        }
        body.loaded { opacity: 1; }

        /* DARK MODE */
        body.dark-mode {
            background-color: #1e1e2f !important;
            color: #f1f1f1 !important;
        }

        /* HERO SECTION */
        .hero {
            background: linear-gradient(to right, rgba(106, 17, 203, 0.65), rgba(37, 117, 252, 0.65)),
                        url('/images/library-hero.jpg') center/cover no-repeat;
            padding: 130px 20px;
            color: #fff;
            background-attachment: fixed;
        }

        .hero h1 { font-size: 3.2rem; font-weight: 700; }
        .hero p { opacity: 0.95; }

        /* ANNOUNCEMENT BAR */
        .announcement-bar {
            background: #ffdd57;
            color: #1f1f1f;
            font-weight: 600;
        }

        /* GLASS STATS */
        .stat-box {
            border-radius: 14px;
            padding: 30px;
            backdrop-filter: blur(12px);
            background: rgba(255,255,255,0.55);
            transition: .3s;
            box-shadow: 0 0 12px rgba(0,0,0,.2);
        }
        .stat-box:hover { transform: translateY(-5px); }

        /* CARD ANIMATION */
        .nav-card { border-radius: 12px; transition: .35s; }
        .nav-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0px 20px 40px rgba(0,0,0,.20);
        }

        /* DARK MODE TOGGLE */
        #darkModeToggle {
            position: fixed; top: 20px; right: 20px; z-index: 999;
        }
    </style>
}

<!-- 🌙 DARK MODE BUTTON -->
<button id="darkModeToggle" class="btn btn-sm btn-dark">
    <i id="themeIcon" class="fa fa-moon"></i>
</button>


<div class="container-fluid px-0">

    <!-- HERO -->
    <section class="hero text-center" data-aos="fade-up">
        <h1 data-aos="zoom-in">Welcome to SVMIT Digital Library 📚</h1>
        <p class="lead mt-3" data-aos="zoom-in" data-aos-delay="200">
            Access thousands of academic books & journals anytime.
        </p>
    </section>

    <!-- ANNOUNCEMENT BAR (Dynamic) -->
    @if (Model != null)
    {
        <section class="announcement-bar py-3 text-center" data-aos="fade-right">
            <strong>📢 Announcement:</strong> @Model.Message
        </section>
    }

    <!-- ABOUT -->
    <section class="container my-5">
        <div class="row text-center g-4">
            <div class="col-md-4" data-aos="zoom-in">
                <h3>📖 About</h3>
                <p>Supporting students & faculty with rich academic resources.</p>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                <h3>🎓 Who Can Access</h3>
                <p>Students, Faculty & Staff of SVMIT.</p>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="400">
                <h3>✨ Key Features</h3>
                <p>Search, Issue tracking, Notifications & more.</p>
            </div>
        </div>
    </section>

    <!-- STATS -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <div class="row g-4">

                <div class="col-md-3" data-aos="flip-left">
                    <div class="stat-box">
                        <h2>📚 5,000+</h2><p>Total Books</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="flip-left" data-aos-delay="200">
                    <div class="stat-box">
                        <h2>👩‍🎓 1,200+</h2><p>Users</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="flip-left" data-aos-delay="400">
                    <div class="stat-box">
                        <h2>📂 15+</h2><p>Categories</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="flip-left" data-aos-delay="600">
                    <div class="stat-box">
                        <h2>🕐 9 AM – 5 PM</h2><p>Timings</p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- NAVIGATION OPTIONS -->
    <section class="container my-5">
        <div class="row g-4 text-center">

            <div class="col-md-4" data-aos="fade-up">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔍 Explore Books</h4>
                        <p>Browse & search by category.</p>
                        <a href="@Url.Action("Index", "Books")" class="btn btn-primary">Go to Books</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4" data-aos="fade-up" data-aos-delay="150">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>🔐 Login</h4>
                        <p>Login as Student, Faculty, Librarian, Admin.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card nav-card shadow h-100">
                    <div class="card-body">
                        <h4>📞 Helpdesk</h4>
                        <p>Need assistance? Contact us.</p>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-info">Contact Us</a>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        AOS.init();

        // Fade-in
        document.addEventListener("DOMContentLoaded", () => {
            document.body.classList.add("loaded");
        });

        // Dark Mode
        const icon = document.getElementById("themeIcon");
        function setDarkMode(status) {
            document.body.classList.toggle("dark-mode", status);
            icon.className = status ? "fa fa-sun" : "fa fa-moon";
            localStorage.setItem("darkMode", status);
        }
        setDarkMode(localStorage.getItem("darkMode") === "true");

        document.getElementById("darkModeToggle").addEventListener("click", () => {
            const enabled = !document.body.classList.contains("dark-mode");
            setDarkMode(enabled);
        });
    </script>
}
