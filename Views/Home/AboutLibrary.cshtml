@{
    ViewData["Title"] = "About Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>

        /* ----------------------------------------------------
           üåà Premium Apple-Style Soft Gradient Background
           ---------------------------------------------------- */
        body {
            background: linear-gradient(145deg, #eef1f7, #f9fafc);
            background-attachment: fixed;
            position: relative;
        }

        /* Subtle noise overlay */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("https://www.transparenttextures.com/patterns/asfalt-light.png");
            opacity: 0.12;
            pointer-events: none;
            z-index: -1;
        }

        /* ----------------------------------------------------
           üé® Premium Glass Cards
           ---------------------------------------------------- */
        .pro-card {
            background: rgba(255, 255, 255, 0.65);
            border-radius: 18px;
            padding: 28px;
            margin-bottom: 28px;
            backdrop-filter: blur(14px);
            box-shadow:
                0 8px 26px rgba(0, 0, 0, 0.08),
                inset 0 0 1px rgba(255, 255, 255, 0.4);
            transition: all 0.3s ease;
        }

        .pro-card:hover {
            transform: translateY(-6px);
            box-shadow:
                0 12px 32px rgba(0, 0, 0, 0.11),
                inset 0 0 1px rgba(255, 255, 255, 0.5);
        }

        .pro-card h4 {
            font-weight: 700;
            color: #1f4ddb;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .pro-card ul {
            padding-left: 18px;
        }

        /* Nice bullet spacing */
        .pro-card ul li {
            margin-bottom: 8px;
        }

        /* Icons */
        .icon {
            font-size: 1.2rem;
            color: #1f4ddb;
        }

        /* ----------------------------------------------------
           üìå Layout Adjustments
           ---------------------------------------------------- */
        .about-section {
            padding: 60px 20px;
        }

        @@media (max-width: 768px) {
            .pro-card {
                padding: 22px;
            }
        }

    </style>
}

