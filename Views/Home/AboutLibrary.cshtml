@{
    ViewData["Title"] = "About Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>

    /* üìö Background Image with Dark Overlay */
    body {
        background: url('/images/library-bg.jpg') center/cover fixed no-repeat;
        position: relative;
    }

    body::before {
        content: "";
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        backdrop-filter: blur(3px);
        z-index: -1;
    }

    /* üåü Hero Card */
    .about-hero {
        max-width: 900px;
        margin: 70px auto;
        background: rgba(255,255,255,0.08);
        border-radius: 30px;
        padding: 70px 40px;
        text-align: center;
        color: white;
        backdrop-filter: blur(14px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.45);
        border: 1px solid rgba(255,255,255,0.08);
        position: relative;
        overflow: hidden;
    }

    /* Glow Border */
    .about-hero::after {
        content: "";
        position: absolute;
        inset: -2px;
        border-radius: 30px;
        padding: 2px;
        background: linear-gradient(145deg, rgba(255,255,255,0.3), rgba(255,255,255,0));
        -webkit-mask: 
            linear-gradient(#fff 0 0) content-box, 
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
    }

    .about-hero h1 {
        font-weight: 800;
        letter-spacing: .5px;
        margin-bottom: 12px;
    }

    .about-hero p {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    /* üìò Section Container */
    .about-section {
        max-width: 1100px;
        margin: auto;
        padding-bottom: 80px;
        margin-top: 20px;
    }

    /* üíé Glass Info Boxes */
    .info-box {
        background: rgba(255,255,255,0.12);
        border-radius: 20px;
        padding: 35px;
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.4);
        border: 1px solid rgba(255,255,255,0.15);
        color: #f0f4ff;
        transition: 0.35s ease;
    }

    .info-box:hover {
        transform: translateY(-6px);
        background: rgba(255,255,255,0.18);
        box-shadow: 0 15px 40px rgba(0,0,0,0.55);
    }

    /* Icon Badge */
    .icon-badge {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(255,255,255,0.18);
        color: #fff;
        font-size: 1.6rem;
        margin-right: 14px;
        box-shadow: inset 0 0 6px rgba(255,255,255,0.25);
    }

    .info-header {
        display: flex;
        align-items: center;
        margin-bottom: 18px;
        font-weight: 600;
        font-size: 1.25rem;
        color: #ffffff;
    }

    ul li {
        margin-bottom: 8px;
        font-size: 1rem;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .about-hero {
            padding: 50px 25px;
            margin: 40px 15px;
        }
    }

</style>
}

<!-- üåü Floating Hero Card -->
<div class="about-hero" data-aos="zoom-in">
    <h1 class="display-6">üìö About SVMIT College Library</h1>
    <p class="lead">Empowering students and faculty with knowledge, resources & modern digital access.</p>
</div>

<!-- üìò Info Section -->
<div class="about-section row g-4">

    <!-- Services (TOP LEFT) -->
    <div class="col-md-6" data-aos="fade-up">
        <div class="info-box">
            <div class="info-header">
                <div class="icon-badge"><i class="bi bi-gear-fill"></i></div>
                Services Offered
            </div>
            <ul>
                <li>üîç Online Book Search & Request</li>
                <li>üìö Book Issuing & Returning</li>
                <li>üìñ Reading History Tracking</li>
                <li>üì¨ Request New Books</li>
                <li>üõ† Admin & Librarian Dashboards</li>
            </ul>
        </div>
    </div>

    <!-- Library Hours (TOP RIGHT) -->
    <div class="col-md-6" data-aos="fade-up" data-aos-delay="150">
        <div class="info-box">
            <div class="info-header">
                <div class="icon-badge"><i class="bi bi-clock-history"></i></div>
                Library Hours
            </div>
            <p><strong>Monday ‚Äì Friday:</strong><br />8:30 AM ‚Äì 4:00 PM</p>
            <p><strong>Saturday:</strong><br />8:30 AM ‚Äì 1:00 PM</p>
        </div>
    </div>

    <!-- Our Mission (BOTTOM LEFT) -->
    <div class="col-md-6" data-aos="fade-up">
        <div class="info-box">
            <div class="info-header">
                <div class="icon-badge"><i class="bi bi-bullseye"></i></div>
                Our Mission
            </div>
            <p>To provide seamless access to books, journals, and digital content ‚Äî enhancing research and academic excellence.</p>
        </div>
    </div>

    <!-- Who Can Use (BOTTOM RIGHT) -->
    <div class="col-md-6" data-aos="fade-up" data-aos-delay="150">
        <div class="info-box">
            <div class="info-header">
                <div class="icon-badge"><i class="bi bi-people-fill"></i></div>
                Who Can Use
            </div>
            <p>All students, faculty, staff, and administrators of SVMIT can access, explore, and request books.</p>
        </div>
    </div>

</div>

