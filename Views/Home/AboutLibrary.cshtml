@{
    ViewData["Title"] = "About Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>

        /* üå§Ô∏è Premium Gradient Background */
        body {
            background: linear-gradient(to bottom right, #f8f9fb, #eef1f7);
        }

        /* üåü Hero Section */
        .about-hero {
            background: linear-gradient(to right, rgba(106, 17, 203, 0.80), rgba(37, 117, 252, 0.85)),
                        url('@Url.Content("~/images/library-banner.jpg")') center/cover no-repeat;
            color: white;
            padding: 90px 20px;
            text-align: center;
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
            box-shadow: 0 6px 25px rgba(0,0,0,0.25);
            backdrop-filter: blur(4px);
        }

        .about-hero h1 {
            font-weight: 700;
            letter-spacing: 1px;
        }

        /* üì¶ Section Area */
        .about-section {
            padding: 70px 20px;
        }

        /* üíé Premium Info Boxes */
        .info-box {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(4px);
            border-radius: 18px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
            padding: 32px;
            margin-bottom: 35px;
            transition: all 0.35s ease;
            border: 1px solid rgba(255,255,255,0.5);
        }

        .info-box:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 26px rgba(0,0,0,0.12);
        }

        .info-box h4 {
            color: #2563eb;
            font-weight: 600;
            margin-bottom: 18px;
        }

        .icon {
            font-size: 1.5rem;
            margin-right: 10px;
            color: #2563eb;
        }

        /* Responsive Fix */
        @@media (max-width: 768px) {
            .about-hero h1 {
                font-size: 1.8rem;
            }
        }
    </style>
}

<!-- üåü Hero Section -->
<div class="about-hero" data-aos="fade-down">
    <div class="container">
        <h1 class="display-5 fw-bold">üìö About SVMIT College Library</h1>
        <p class="lead mt-2">Empowering students and faculty with knowledge, resources & modern digital access.</p>
    </div>
</div>

<!-- üìò Information Section -->
<div class="about-section container">

    <div class="row">

        <!-- Left Column -->
        <div class="col-md-6">

            <!-- Mission -->
            <div class="info-box" data-aos="fade-right">
                <h4><i class="icon bi bi-bullseye"></i> Our Mission</h4>
                <p>
                    To provide seamless access to books, journals, and digital content ‚Äî enhancing learning,
                    research, and academic excellence across the institution.
                </p>
            </div>

            <!-- Who Can Use -->
            <div class="info-box" data-aos="fade-right" data-aos-delay="200">
                <h4><i class="icon bi bi-person-check-fill"></i> Who Can Use</h4>
                <p>
                    Students, Faculty, Staff, and Administrators of SVMIT can explore, issue, request,
                    and manage books through the digital platform.
                </p>
            </div>

        </div>

        <!-- Right Column -->
        <div class="col-md-6">

            <!-- Services -->
            <div class="info-box" data-aos="fade-left">
                <h4><i class="icon bi bi-gear-fill"></i> Services Offered</h4>
                <ul>
                    <li>üîç Online Book Search & Request</li>
                    <li>üìö Book Issuing & Returning</li>
                    <li>üìñ Reading History Tracking</li>
                    <li>üì¨ Request New Books</li>
                    <li>üõ† Admin & Librarian Management Panel</li>
                </ul>
            </div>

            <!-- Timings -->
            <div class="info-box" data-aos="fade-left" data-aos-delay="200">
                <h4><i class="icon bi bi-clock-history"></i> Library Hours</h4>
                <p><strong>Monday ‚Äì Friday:</strong><br />8:30 AM ‚Äì 4:00 PM</p>
                <p><strong>Saturday:</strong><br />8:30 AM ‚Äì 1:00 PM</p>
            </div>

        </div>
    </div>
</div>
